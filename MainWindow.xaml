<Window x:Class="EggSoft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EggSoft"
        mc:Ignorable="d"
        Title="EggSoft Ana Menü" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="EggSoft'a Hoş Geldiniz!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Tedarikçi Listesi" 
                    Width="180" Height="40" 
                    Margin="5" 
                    Click="TedarikciListesiAc_Click"/>
            <Button Content="İskonto Oranları" 
                    Width="180" Height="40" 
                    Margin="5" 
                    Click="IskontoOranlariAc_Click"/>
            <Button Content="Başmakçı Fiyatları" 
                    Width="180" Height="40" 
                    Margin="5" 
                    Click="BasmakciFiyatlariAc_Click"/>
            <Button Content="Yumurta Alım" 
                    Width="180" Height="40" 
                    Margin="5" 
                    Click="YumurtaAlimAc_Click"/>
            <Button Content="Yumurta Stok Durumu" Width="180" Height="40" 
                    Margin="5" 
                    Click="YumurtaStokAc_Click"/>
            <Button Content="Çıkış" 
                    Width="180" Height="40" 
                    Margin="5" 
                    Click="Cikis_Click"/>
        </StackPanel>
    </Grid>
</Window>